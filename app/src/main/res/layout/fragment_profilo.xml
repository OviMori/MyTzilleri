<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ProfiloFrag"
    android:weightSum="1">



        <LinearLayout
            android:id="@+id/linear_of_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:background="@color/back_g_profile_image"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagine_profilo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:foreground="@drawable/profilo_icon"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nome_utente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="Nome"/>

                        <TextView
                            android:id="@+id/cognome_utente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="150dp"
                            android:gravity="center"
                            android:text="Cognome"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/indirizzo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:gravity="center"
                        android:text="Via Arginamento, 11"/>

                    <TextView
                        android:id="@+id/cellulare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:gravity="center"
                        android:text="1234567890"/>

                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:gravity="center"
                        android:text="#ProvaBioUtente"/>

                    <Button
                        android:id="@+id/buttonTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/main_orange"
                        android:text="Button" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/promemoria_utente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="Nome"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="150dp"
                            android:gravity="center"
                            android:text="Cognome"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:foreground="@color/back_g_profile_image"/>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/info_utente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/main_orange"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            android:text="Informazioni personali"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:text="Attenzione!"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="Le informazioni inserite saranno pubbliche "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="Nome Cognome"/>

                        <EditText
                            android:id="@+id/info_utente_nome_cognome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="7dp"
                            android:gravity="left"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="Nome Cognome"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="Indirizzo"/>

                        <EditText
                            android:id="@+id/info_utente_indirizzo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="7dp"
                            android:gravity="left"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="Indirizzo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="Cellulare"/>

                        <EditText
                            android:id="@+id/info_utente_cellulare"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="7dp"
                            android:gravity="left"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="Cellulare"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="Bio"/>

                        <EditText
                            android:id="@+id/info_utente_bio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="7dp"
                            android:gravity="left"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="Biografia"/>



                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>
        </LinearLayout>





</LinearLayout>