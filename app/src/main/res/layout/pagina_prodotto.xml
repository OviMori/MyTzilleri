<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_orange"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/back_button"
                android:clickable="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/back_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Nome prodotto"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_weight="3.5"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/immagine_prodotto"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/coca_cola"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:textSize="25dp"
                            android:text="Dati prodotto"
                            android:textColor="@color/main_orange"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="15dp"
                        style="@style/VociElenco"
                        android:text="Nome prodotto"/>


                    <EditText
                        android:id="@+id/info_prodotto_nome_prodotto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="130dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:text=""
                        android:hint="Nome prodotto"
                        style="@style/EditTextElenco"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginRight="130dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="15dp"
                        style="@style/VociElenco"
                        android:text="Categoria"/>


                    <EditText
                        android:id="@+id/info_prodotto_categoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="130dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:text=""
                        android:hint="Categoria"
                        style="@style/EditTextElenco"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textSize="15dp"
                        style="@style/VociElenco"
                        android:text="Quantita'"/>


                    <EditText
                        android:id="@+id/info_utente_nome_cognome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="130dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:text=""
                        android:hint="20"
                        style="@style/EditTextElenco"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:textSize="15dp"
                                style="@style/VociElenco"
                                android:text="Imposta notifica esaurimento scorte"/>

                            <EditText
                                android:id="@+id/info_prodotto_esaurimento_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="151dp"
                                android:layout_marginLeft="7dp"
                                android:gravity="left"
                                android:textSize="20dp"
                                android:text=""
                                android:hint="1"
                                style="@style/EditTextElenco"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="2">

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_notifica_esaurimento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:theme="@style/SCBSwitch"/>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        style="@style/Separator" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:textSize="25dp"
                            android:text="Dati fornitore"
                            android:textColor="@color/main_orange"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="25dp"
                                        android:gravity="right"
                                        android:padding="2dp"
                                        android:textSize="15dp"
                                        android:text="Nome:"
                                        style="@style/VociElenco"/>

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="130dp"
                                        android:layout_marginLeft="7dp"
                                        android:gravity="left"
                                        android:textSize="15dp"
                                        android:text=""
                                        android:hint="Mario Rossi"
                                        android:background="@drawable/edittext_bottom_line"
                                        style="@style/EditTextElenco"/>

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="25dp"
                                        android:gravity="right"
                                        android:padding="2dp"
                                        android:textSize="15dp"
                                        android:text="Email:"
                                        style="@style/VociElenco"/>

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="7dp"
                                        android:gravity="left"
                                        android:textSize="15dp"
                                        android:text=""
                                        android:hint="Mariorossi@gmail.com"
                                        android:background="@drawable/edittext_bottom_line"
                                        style="@style/EditTextElenco"/>

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="50dp"
                                        android:layout_height="25dp"
                                        android:gravity="right"
                                        android:padding="2dp"
                                        android:textSize="15dp"
                                        android:text="Tel:"
                                        style="@style/VociElenco"/>

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="7dp"
                                        android:gravity="left"
                                        android:textSize="15dp"
                                        android:text=""
                                        android:hint="1234567890"
                                        android:background="@drawable/edittext_bottom_line"
                                        style="@style/EditTextElenco"/>

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"/>

                            </LinearLayout>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="90dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>





</LinearLayout>