<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="VociElenco" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/voce_elenco_grey</item>
    </style>


    <!--Style Pulsanti -->

    <style name="Theme.App.Buttons" parent="Theme.MaterialComponents">
        ...
        <item name="colorPrimary">@color/colormind_verde_acqua</item>
        <item name="colorOnPrimary">@color/colormind_verde_acqua</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colormind_arancione</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent.Button</item>
    </style>

    <style name="MyToolbarTheme"
        parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">4dp</item>
    </style>



    <!-- Style link pulsanti -->
    <style name="Theme.App.Links" parent="Theme.MaterialComponents">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colormind_arancione</item>
        <item name="backgroundTint">@color/white</item>
    </style>


    <!-- TextInputLayout Style -->
    <style name="LoginTextInputLayoutStyle" parent="Theme.MaterialComponents">
        <item name="boxStrokeColor">@color/colormind_arancione</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/colormind_arancione</item>
        <item name="hintTextColor">@color/colormind_arancione</item>
        <item name="android:textAppearance">@style/MyEditTextAppearanceText</item>
        <item name="boxBackgroundColor">#ECECEC</item>
        <!--<item name="android:background">@drawable/shape_edit_text</item>-->
    </style>
    <style name="MyEditTextAppearanceText">
        <item name="android:textColor">@color/colormind_blu_scuro</item>
    </style>

    <style name="LoginTextInputLayoutStylePassword" parent="LoginTextInputLayoutStyle">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colormind_blu_scuro</item>
    </style>


    <!--Tab Layout-->
    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colormind_arancione</item>
        <item name="tabIndicatorColor">@color/colormind_arancione</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nav_bar_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="spinnerTheme" parent= "Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="strokeColor">@color/main_orange</item>
        <item name="android:textColor">@color/colormind_blu_chiaro</item>
        <item name="android:background">@color/colormind_arancione</item>
    </style>
</resources>